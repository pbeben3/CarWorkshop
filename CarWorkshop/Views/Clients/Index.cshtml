@model List<CarWorkshop.Service.Query.Dtos.ClientDto>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2 class="text-center">Klienci</h2>
        <a asp-action="Add" class="btn btn-success btn-sm">Dodaj Klienta</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Imię</th>
                    <th scope="col">Nazwisko</th>
                    <th scope="col">E-mail</th>
                    <th scope="col" style="width: 250px;">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td>@client.Id</td>
                        <td>@client.Name</td>
                        <td>@client.Surname</td>
                        <td>@client.Email</td>
                        <td class="align-middle">
                            <div class="btn-group" role="group" aria-label="Akcje">
                                <a asp-action="ClientOrders" asp-controller="Orders" asp-route-id="@client.Id" class="btn btn-primary btn-sm">Zamówienia</a>
                                <a asp-action="Index" asp-controller="Repairs" asp-route-id="@client.Id" class="btn btn-secondary btn-sm">Historia Napraw</a>
                                <a asp-action="ClientCars" asp-controller="Cars" asp-route-id="@client.Id" class="btn btn-info btn-sm">Samochody</a>
                                <form asp-action="Delete" method="post" onsubmit="return confirm('Czy na pewno chcesz usunąć tego klienta?');" class="btn btn-danger btn-sm">
                                    <input type="hidden" name="ClientId" value="@client.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Usuń</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




