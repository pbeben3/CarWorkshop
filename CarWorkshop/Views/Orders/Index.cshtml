@model IEnumerable<CarWorkshop.Service.Query.Dtos.OrderDto>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2 class="text-center">Zamówienia Klienta</h2>
        <div>
            <a asp-action="Index" controller="Clients" class="btn btn-primary">Powrót do listy klientów</a>
            <a asp-action="CreateOrder" controller="Orders" class="btn btn-info ml-2">Dodaj zamówienie</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Data</th>
                    <th scope="col">Status</th>
                    <th scope="col">Opis</th>
                    <th scope="col" style="width: 100px;">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td>@order.Status</td>
                        <td>@order.Description</td>
                        <td>
                            <a asp-action="EditOrder" asp-controller="Orders" asp-route-id="@order.Id" class="btn btn-warning btn-sm">Edytuj</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>