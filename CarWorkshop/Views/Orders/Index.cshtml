@model IEnumerable<CarWorkshop.Service.Query.Dtos.OrderDto>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2 class="text-center">Zamówienia Klienta</h2>
        <div>
            <a asp-action="Index" asp-controller="Clients" class="btn btn-primary">Powrót do listy klientów</a>
            <a asp-action="Add" asp-controller="Orders" asp-route-clientId="@ViewBag.ClientId" class="btn btn-info ml-2">Dodaj zamówienie</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Data</th>
                    <th scope="col">Samochód</th>
                    <th scope="col">Status</th>
                    <th scope="col">Opis</th>
                    <th scope="col" style="width: 100px;">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td>@order.CarBrand @order.CarModel</td>
                        <td>@order.Status</td>
                        <td>@order.Description</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Akcje">
                                <a asp-action="Edit" asp-controller="Orders" asp-route-id="@order.Id" class="btn btn-primary btn-sm mr-2">Zmień status</a>
                                <a asp-action="Add" asp-controller="Repairs" asp-route-orderId="@order.Id" asp-route-clientId="@order.ClientId" class="btn btn-secondary btn-sm mr-2">Dodaj naprawę</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>